<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuickCash"
        tools:targetApi="34">

        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key" />
        <!-- Login Activity as Launcher -->

        <activity
            android:name=".ui.activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.QuickCash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activities.RegistrationActivity"
            android:exported="true"
            android:theme="@style/Theme.QuickCash">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.MainActivity"></activity>

        <!-- Role Selection Activity -->
        <activity
            android:name=".ui.activities.RoleActivity"
            android:exported="true"
            android:theme="@style/Theme.QuickCash" />

        <!-- Profile Activity -->
        <activity
            android:name=".ui.models.Profile"
            android:exported="true"
            android:theme="@style/Theme.QuickCash" />

        <!-- Search Activity -->
        <activity
            android:name=".ui.activities.SearchActivity"
            android:exported="true"
            android:theme="@style/Theme.QuickCash" />

        <!-- Map Activity -->
        <activity
            android:name=".ui.activities.MapActivity"
            android:exported="true"
            android:theme="@style/Theme.QuickCash" />

        <!-- Employee Homepage Activity -->
        <activity android:name=".ui.activities.EmployeeHomepageActivity"
            android:exported="true"
            android:theme="@style/Theme.QuickCash">
        </activity>

        <!-- Employer Homepage Activity -->
        <activity android:name=".ui.activities.EmployerHomepageActivity"
            android:exported="true"
            android:theme="@style/Theme.QuickCash">
        </activity>

        <!-- JobSubmissionPage Activity -->
        <activity android:name=".ui.activities.JobSubmissionActivity"
            android:exported="true"
            android:theme="@style/Theme.QuickCash">
        </activity>

    </application>

</manifest>