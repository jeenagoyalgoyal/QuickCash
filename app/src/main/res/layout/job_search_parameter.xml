<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".JobSearchParameterActivity">

    <LinearLayout
        android:id="@+id/job_search_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Search Job"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:paddingBottom="30dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Job Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginStart="13dp"/>

        <EditText
            android:id="@+id/jobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:hint="Enter Job Title"
            android:width="300dp"
            android:layout_marginStart="13dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Company Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginStart="13dp"/>

        <EditText
            android:id="@+id/companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:hint="Enter Company name"
            android:width="300dp"
            android:layout_marginStart="13dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="13dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Salary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                <EditText
                    android:id="@+id/minSalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:hint="Min Salary"
                    android:inputType="number"
                    android:width="100dp"/>

                <EditText
                    android:id="@+id/maxSalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:hint="Max Salary"
                    android:inputType="number"
                    android:width="100dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="13dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Duration"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <EditText
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    tools:hint="Enter Min Hour"
                    android:inputType="number"
                    android:width="150dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Location"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginStart="13dp"/>

        <EditText
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:hint="Enter Preferred location"
            android:width="300dp"
            android:layout_marginStart="13dp"/>

        <TextView
            android:id="@+id/jspErrorDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:text="Location"
            tools:textColor="r"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginStart="13dp"/>

        <Button
            android:id="@+id/search_job_parameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Search"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp" />

        <View
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Search Results"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="15dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:outlineAmbientShadowColor="@color/cardview_dark_background"
            tools:itemCount="2"
            tools:listitem="@layout/job_search_result_view"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>